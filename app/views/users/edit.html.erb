<div class="signup-login-field container-fluid fadeIn_text_up_1s">
	<%= form_with(model: @user, local: true) do |f| %>  
		<div class="error-message">
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		      <ul>
  		      <% @user.errors.full_messages.each do |message| %>
  		        <li><%= message %></li>
  		      <% end %>
		      </ul>
		    </div>
		  <% end %>
	  </div>
		<div class="col-md-3"></div>
		<div class="signup-field col-md-6">
	    <div class="form-area"> 
	  	<br style="clear:both">
  	  	<div class="form-content">
  		  	<h4><%= t '.edit_title' %></h4>
  			</div>
  			<div class="form-group">
          <li><%= f.text_field :name, placeholder: t('helpers.placeholder.name'), class: "form-control" %></li>
  			</div>
  			<div class="form-group">
          <li><%= f.email_field :email, placeholder: t('helpers.placeholder.email'), class: "form-control" %></li>
  			</div>
  			<div class="form-group">
          <li><%= f.password_field :password, placeholder: t('helpers.placeholder.password'), class: "form-control" %></li>		  
  			</div>
        <% f.hidden_field :password_confirmation %>
    		<%= f.submit t('.submit_edit'), class: "btn btn-default pull-left", style: "margin-top: 6px"  %>
		  </div>
		</div>
		<div class="col-md-3"></div>
	<% end %>
</div>
<div class="signup-login-field container-fluid fadeIn_text_up_1s">
	<%= form_with(model: @user, local: true) do |f| %>  
		<div class="error-message">
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		    	<li>会員登録できません</li>
		    	<h3>エラーがあります</h3>
		      <ul>
		      <% @user.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
	  </div>
		<div class="col-md-3"></div>
		<div class="signup-field col-md-6">
	    <div class="form-area"> 
	  	<br style="clear:both">
  	  	<div class="form-content">
  		  	<h4>登録情報の編集</h4>
  			</div>
  			<div class="form-group">
          <li><%= f.text_field :name,placeholder: :名前,class: "form-control" %></li>
  			</div>
  			<div class="form-group">
          <li><%= f.email_field :email,placeholder: :Eメール,class: "form-control" %></li>
  			</div>
  			<div class="form-group">
          <li><%= f.password_field :password ,placeholder: :パスワード,class: "form-control" %></li>		  
  			</div>
        <% f.hidden_field :password_confirmation %>
    		<%= f.submit "登録", class: "btn btn-default pull-left",style: "margin-top: 6px"  %>
		  </div>
		</div>
		<div class="col-md-3"></div>
	<% end %>
</div>
<div class="confirm_field container-fluid fadeIn_text_up_1s">
  <div class="confirm_field_title">
    <h4><%= t '.text' %></h4>
    <hr width="40%">
  </div>
  <div class="confirm_content">
    <%= form_with(model: @book, url: books_path, local: true) do |form| %>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 book-show-img">
        <%= image_tag(@book.image.url, class:"img-responsive") %>
        <%= hidden_field_tag :"cache[image]", @book.image.cache_name %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 book-show-contents">
        <h4><%= t '.title' %></h4>
        <h1 class="confirm_content_book"><%= @book.title %></h1>
        <h4><%= t '.comment' %></h4>
        <li class="confirm_content_book"><%= @book.content %></li>
        <h4><%= t '.genre' %></h4>
        <li class="confirm_content_book"><%= Book.tag_enum_name(@book.tag_list) %></li>
        <%= form.hidden_field :title %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :tag_list %>
        <div class="confirm_btn">
        <%= form.submit t('.submit_confirm'), class: 'btn btn-default pull-left pull-bottom' %>
        </div>
      </div>      
    <% end %>
    <div class="col-md-12 back_btn">
    <%= form_with(model: @book, url: new_book_path, local: true, method: 'get') do |form| %>
      <%= hidden_field_tag :"cache[image]", @book.image.cache_name %>
      <%= form.hidden_field :title %>
      <%= form.hidden_field :content %>
      <%= form.hidden_field :tag_list %>
      <%= form.submit t('.submit_back'), name: 'back', class: 'btn btn-default pull-center' %>
    <% end %>
    </div>
  </div>
</div>


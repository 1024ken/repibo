<div class="books-new container-fluid">
  <div class="row">
    <h3>新規投稿</h3>
    <div class="col-md-4"></div>
    <hr  class="col-md-4">
    <div class="col-md-4"></div>
  </div>  
  
  <%= form_with(model: @book, local: true ,url: choose_new_or_edit ) do |form| %>
    <div class="error-message">
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3>エラーがあります。</h3>
          <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  
  
    <div class="post-contents row">
      <div class="col-md-2"></div>
      <div class="post-left form-area col-md-4">
       <br style="clear:both">
        <div class="book_title form-group">
           <li>タイトル</li>
           <p class="text_area"><%= form.text_field :title ,placeholder: :タイトル,class: "form-control" %></p>
        </div>

        <div class="form-group">
          <li>ジャンル</li>
          <!--<%= form.label :tag_list, "ジャンル"  %><br>-->
          <%= form.select :tag_list, [
                                      ["のりもの", "のりもの" ],
                                      ["たべもの", "たべもの" ],
                                      ["ことば・かず", "ことば・かず" ],
                                      ["いきもの・からだ", "いきもの・からだ" ],
                                      ["おもしろ・おかしい", "おもしろ・おかしい" ],
                                      ["ほっこり・しんみり", "ほっこり・しんみり" ],
                                      ["わくわく・ドキドキ", "わくわく・ドキドキ" ],
                                      ["こわい・おばけ", "こわい・おばけ" ],
                                      ["かがく・ちえ", "かがく・ちえ" ],
                                      ["むかしばなし", "むかしばなし" ],
                                      ] %>
        </div>
      
        <div class="book-up-field form-group">
          <div class="book_img">
            <li>絵本の画像</li>
          <%= form.label :image,"アップロード", class: "btn btn-default" %>
          <%= form.file_field :image ,id: :book_image, class: "fileInput",style: "display:none;" %>
          <%= form.hidden_field :image_cache %>
          </div>
        </div>
        <div class="book_content form-group">
           <li>コメント</li>
           <!--<%= form.label "内容" %>-->
           <p class="text_area"><%= form.text_area :content,placeholder: :タイトル,class: "form-control",:rows =>"7" %></p>
        </div>
        <!--<div class="transfer_complete">-->
        <!--    <li>取引完了</li>-->
        <!--    <%= form.check_box :transfer_complete, { class:"custom-checkbox" }, "true", "false" %>  -->
        <!--</div>-->
        <div class="book-new-submit">
          <%= form.submit "投稿する",class: 'btn btn-default'%>
        </div> 
      </div>
      <!--<div class="col-md-2"></div>-->
      <div class="new_submit col-md-4">
        <li>xxxxxxxxxxxxxxxxxxxxxx</li>
        <li>xxxxxxxxxxxxxxxxxxxxxx</li>
        <li>xxxxxxxxxxxxxxxxxxxxxx</li>
        <li>xxxxxxxxxxxxxxxxxxxxxx</li>
      </div>
      <div class="col-md-2"></div>
    </div>
  <% end %>
</div>


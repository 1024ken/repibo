

<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      
  <div class="container contact-content">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <h4>Re:piboに関するお問い合わせは</h4>
      <h4>こちらからお願いいたします。</h4>
      <hr>
      <div class="form-area"> 
        <br style="clear:both">
          <!--<h3 style="margin-bottom: 30px; text-align: center;">お問い合わせ</h3>-->
    			<div class="form-group">
            <%= form.text_field :name, id: :contact_name,placeholder: :名前,class: "form-control" %>
					</div>
					<div class="form-group">
						<%= form.text_field :email, id: :contact_email,placeholder: :Eメール,class: "form-control" %>
					</div>
          <div class="form-group">
            <%= form.text_area :content, id: :contact_content ,placeholder: :お問い合わせ内容,class: "form-control",:rows =>"7" %>
          </div>
            <%= form.submit "送信",class: 'btn btn-default pull-right'%>
      </div>
    </div>
  </div>
  
<% end %>